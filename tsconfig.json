{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "$client/*": ["client/*"],
      "$server/*": ["server/*"],
      "$shared/*": ["shared/*"]
    }
  },
  "include": ["client", "server", "shared"],
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext"
    }
  }
}
